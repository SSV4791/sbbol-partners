{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Нумерация",
  "properties": {
    "offset": {
      "type": "integer",
      "title": "Смещение от начала"
    },
    "count": {
      "type": "integer",
      "title": "Количество возвращаемых записей"
    },
    "hasNextPage": {
      "type": "boolean",
      "default": false,
      "title": "Признак наличия следующей страницы"
    }
  },
  "additionalProperties": false,
  "required": [
    "offset",
    "count"
  ]
}
