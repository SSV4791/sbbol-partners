{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Счёт партнера",
  "x-extra-class-annotation": "@AccountKeyValidation @AccountBalanceValidation",
  "properties": {
    "partnerId": {
      "type": "string",
      "title": "Идентификатор партнера",
      "minLength": 36,
      "maxLength": 36,
      "x-not-empty": true
    },
    "digitalId": {
      "type": "string",
      "title": "Идентификатор личного кабинета клиента",
      "minLength": 1,
      "maxLength": 40,
      "x-not-empty": true
    },
    "account": {
      "type": "string",
      "title": "Счёт",
      "pattern": "^\\d{20}$",
      "x-pattern-message": "{validation.account.account.pattern}"
    },
    "bank": {
      "title": "Банк",
      "$ref": "../bank/bank_create.json"
    },
    "comment": {
      "type": "string",
      "title": "Комментарий счета",
      "maxLength": 50
    }
  },
  "required": [
    "partnerId",
    "digitalId",
    "bank"
  ]
}
