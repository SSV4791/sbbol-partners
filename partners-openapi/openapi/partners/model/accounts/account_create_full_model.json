{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Счёт партнера",
  "x-extra-class-annotation": "@AccountKeyValidation",
  "properties": {
    "account": {
      "type": "string",
      "title": "Счёт",
      "maxLength": 20
    },
    "bank": {
      "title": "Банк",
      "$ref": "../bank/bank_create.json"
    },
    "comment": {
      "type": "string",
      "title": "Комментарий счета",
      "maxLength": 50,
      "x-length-message": "{validation.partner.max_symbols}",
      "pattern": "[A-Za-zА-Яа-я0-9Ёё!\\\"№#$%&'() *+,-./:;<=>?@\\\\[\\\\\\\\\\\\]^_`{|}~\\r\\n]*",
      "x-pattern-message": "{validation.partner.illegal_symbols}"
    }
  },
  "required": [
    "bank"
  ]
}
