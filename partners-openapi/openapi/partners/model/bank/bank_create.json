{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Банк",
  "x-extra-class-annotation": "@BankAccountValidation",
  "properties": {
    "bic": {
      "type": "string",
      "title": "БИК",
      "pattern": "[0-9]+",
      "x-pattern-message": "{validation.partner.illegal_symbols}",
      "minLength": 9,
      "maxLength": 9,
      "x-length-message": "{validation.account.bank.bic.length}"
    },
    "name": {
      "type": "string",
      "title": "Наименование"
    },
    "mediary": {
      "type": "boolean",
      "title": "Является транзитным банком",
      "default": false
    },
    "bankAccount": {
      "title": "Корреспондентский счёт",
      "$ref": "bank_account_create.json"
    }
  },
  "required": [
    "bic",
    "name"
  ]
}
