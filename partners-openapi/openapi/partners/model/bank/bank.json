{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Банк",
  "x-extra-class-annotation": "@BankAccountValidation",
  "properties": {
    "id": {
      "type": "string",
      "title": "Идентификатор",
      "minLength": 36,
      "maxLength": 36,
      "x-not-empty": true
    },
    "accountId": {
      "type": "string",
      "title": "Идентификатор счёта партнера",
      "minLength": 36,
      "maxLength": 36,
      "x-not-empty": true
    },
    "version": {
      "type": "integer",
      "format": "int64",
      "title": "Версия"
    },
    "bic": {
      "type": "string",
      "title": "БИК",
      "pattern": "[0-9]+",
      "x-pattern-message": "{validation.partner.illegal_symbols}",
      "minLength": 9,
      "maxLength": 9,
      "x-length-message": "{validation.account.bank.bic.length}"
    },
    "name": {
      "type": "string",
      "title": "Наименование",
      "maxLength": 160
    },
    "mediary": {
      "type": "boolean",
      "title": "Является транзитным банком",
      "default": false
    },
    "bankAccount": {
      "$ref": "bank_account.json",
      "title": "Корреспондентский счёт"
    }
  },
  "required": [
    "name",
    "bic"
  ]
}
