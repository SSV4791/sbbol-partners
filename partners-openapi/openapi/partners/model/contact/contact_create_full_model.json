{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Контакт",
  "properties": {
    "orgName": {
      "type": "string",
      "title": "Наименование организации",
      "maxLength": 350,
      "x-not-empty": true
    },
    "firstName": {
      "type": "string",
      "title": "Имя контакта",
      "maxLength": 50,
      "x-not-empty": true
    },
    "secondName": {
      "type": "string",
      "title": "Фамилия контакта",
      "maxLength": 50,
      "x-not-empty": true
    },
    "middleName": {
      "type": "string",
      "title": "Отчество контакта",
      "maxLength": 50,
      "x-not-empty": true
    },
    "position": {
      "type": "string",
      "title": "Должность",
      "maxLength": 100,
      "x-not-empty": true
    },
    "phones": {
      "type": "array",
      "title": "Номера телефона контакта",
      "items": {
        "type": "string",
        "title": "Номер телефона",
        "minLength": 13,
        "maxLength": 13,
        "pattern": "^\\d{13}$"
      },
      "uniqueItems": true
    },
    "emails": {
      "type": "array",
      "title": "Номера телефона контакта",
      "items": {
        "type": "string",
        "format": "email"
      },
      "uniqueItems": true
    },
    "legalForm": {
      "$ref": "../common/legal_form.json"
    }
  },
  "required": [
    "legalForm"
  ]
}
