{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Вид документа",
  "properties": {
    "id": {
      "type": "string",
      "title": "Идентификатор",
      "x-not-empty": true
    },
    "documentType": {
      "type": "string",
      "title": "Тип удостоверяющего документа (физ. лицо)"
    },
    "description": {
      "type": "string",
      "title": "Описание Типа удостоверяющего документа"
    },
    "legalForms": {
      "type": "array",
      "title": "Тип субъекта документа",
      "items": {
        "$ref": "../common/legal_form.json",
        "uniqueItems": false
      }
    }
  },
  "required": [
    "id"
  ]
}
