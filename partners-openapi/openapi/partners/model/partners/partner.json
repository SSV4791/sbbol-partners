{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Партнер",
  "x-extra-class-annotation": "@NameAttributePartnerDtoValidation @InnLengthAttributePartnerDtoValidation @NamePatternPartnerDtoValidation",
  "properties": {
    "id": {
      "type": "string",
      "title": "Уникальный идентификатор партнера",
      "minLength": 36,
      "maxLength": 36,
      "x-not-empty": true
    },
    "digitalId": {
      "type": "string",
      "title": "Идентификатор личного кабинета клиента",
      "minLength": 1,
      "maxLength": 40,
      "x-not-empty": true
    },
    "version": {
      "type": "integer",
      "format": "int64",
      "title": "Версия"
    },
    "legalForm": {
      "$ref": "../common/legal_form.json"
    },
    "orgName": {
      "type": "string",
      "title": "Наименование организации партнера",
      "maxLength": 160,
      "x-length-message": "{validation.partner.orgName.max_symbols}"
    },
    "firstName": {
      "type": "string",
      "title": "Имя партнера",
      "maxLength": 50,
      "x-length-message": "{validation.partner.firstName.max_symbols}"
    },
    "secondName": {
      "type": "string",
      "title": "Фамилия партнера",
      "maxLength": 50,
      "x-length-message": "{validation.partner.secondName.max_symbols}"
    },
    "middleName": {
      "type": "string",
      "title": "Отчество партнера",
      "maxLength": 50,
      "x-length-message": "{validation.partner.middleName.max_symbols}"
    },
    "inn": {
      "type": "string",
      "title": "ИНН",
      "x-extra-field-annotation": "@InnValidation"
    },
    "kpp": {
      "type": "string",
      "title": "КПП",
      "maxLength": 9
    },
    "ogrn": {
      "type": "string",
      "title": "ОГРН",
      "minLength": 13,
      "maxLength": 15,
      "x-extra-field-annotation": "@OgrnValidation"
    },
    "okpo": {
      "type": "string",
      "title": "ОКПО",
      "minLength": 8,
      "maxLength": 14
    },
    "phones": {
      "type": "array",
      "title": "Номера телефонов партнера",
      "items": {
        "$ref": "../phone/phone.json"
      },
      "uniqueItems": true
    },
    "emails": {
      "type": "array",
      "title": "Адреса электронной почты партнера",
      "items": {
        "$ref": "../email/email.json"
      },
      "uniqueItems": true
    },
    "comment": {
      "type": "string",
      "title": "Комментарий пользователя",
      "maxLength": 255
    },
    "gku": {
      "type": "boolean",
      "title": "Признак ЖКУ",
      "default": false
    },
    "budget": {
      "type": "boolean",
      "title": "Признак бюджетности",
      "default": false
    },
    "citizenship": {
      "$ref": "../common/citizenship.json"
    }
  },
  "required": [
    "id",
    "legalForm",
    "version"
  ]
}
