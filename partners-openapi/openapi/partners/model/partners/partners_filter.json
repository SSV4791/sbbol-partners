{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Запрос Партнеров по фильтру",
  "properties": {
    "digitalId": {
      "type": "string",
      "title": "Идентификатор личного кабинета клиента",
      "minLength": 1,
      "maxLength": 40,
      "x-not-empty": true
    },
    "ids": {
      "type": "array",
      "x-extra-field-annotation": "@UuidFormatArrayValidation",
      "items": {
        "type": "string",
        "minLength": 36,
        "maxLength": 36
      },
      "maximum": 30
    },
    "search": {
      "title": "Поиск партнера по имени, названию компании, инн",
      "type": "object",
      "$ref": "../search/search_partners.json"
    },
    "legalForms": {
      "type": "array",
      "title": "Фильтр по организационно-правовой форме партнера",
      "items": {
        "$ref": "../common/legal_form.json"
      }
    },
    "partnersFilter": {
      "deprecated": true,
      "description": "Будут исключены типы LEGAL_ENTITY, ENTREPRENEUR, PHYSICAL_PERSON",
      "$ref": "../common/partner_filter_type.json"
    },
    "accountSignType": {
      "deprecation": true,
      "$ref": "../common/sign_type.json"
    },
    "pagination": {
      "$ref": "../common/pagination.json",
      "title": "Параметры запроса Партнеров"
    }
  },
  "required": [
    "digitalId",
    "pagination"
  ]
}
