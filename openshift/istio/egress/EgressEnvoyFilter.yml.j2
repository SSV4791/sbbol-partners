---
{% if os_project.istio.egress.ott is defined %}
# Для перенаправления трафика на порт егресса с ОТТ
apiVersion: networking.istio.io/v1alpha3
kind: EnvoyFilter
metadata:
  name: ott-egress-auth-filter
spec:
  configPatches:
    - applyTo: HTTP_FILTER
      patch:
        operation: INSERT_BEFORE
        value:
          name: envoy.ext_authz
          config:
            failure_mode_allow: false
            grpc_service:
              google_grpc:
                stat_prefix: ext_authz
                target_uri: 'unix:/mnt/ott-uds-socket/ott.socket'
              timeout: 2s
            with_request_body:
              allow_partial_message: true
              max_request_bytes: 1600000
      match:
        listener:
          filterChain:
            filter:
              name: envoy.http_connection_manager
          portNumber: {{ os_project.istio.egress.ott.port }}
        context: GATEWAY
  workloadSelector:
    labels:
      app: istio-egressgateway-{{ openshift.env }}-{{ os_project.name }}-{{ suffix_app_label }}
{% endif %}
